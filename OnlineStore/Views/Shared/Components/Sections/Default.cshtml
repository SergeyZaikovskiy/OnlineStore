@model IEnumerable<OnlineStore.ViewModels.SectionViewModel>

<h2>Категории</h2>
<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->

    @foreach (var sec in Model)
    {
        if (sec.CountNestedCategory > 0)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@sec.Id">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @sec.Name
                        </a>
                    </h4>
                </div>
                <div id="@sec.Id" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (var cat in sec.Categories)
                            {
                                <li><a href="#">@cat.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a href="#">
                            @sec.Name
                        </a>
                    </h4>
                </div>
            </div>
        }
    }
</div><!--/category-products-->