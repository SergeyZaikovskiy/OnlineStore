@model List<OnlineStore.ViewModels.ProductViewModel>

    <div class="recommended_items">
        <!--recommended_items-->
        <h2 class="title text-center">Рекоммендуемые товары</h2>

        <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    if (Model != null && Model.Count > 5)
                    {                    
                        //для первого видимого блока
                        <div class="item active">
                         @for (int j = 0; j < 3; j++)
                            {
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="@Model[j].Image.Path" alt="@Model[j].Name" />
                                                <h2>@(Model[j].Price.ToString("C"))</h2>
                                                <p>@Model[j].Name</p>
                                                <a asp-controller="Cart" asp-action="AddtoCart" asp-route-id="@Model[j].Id"
                                                   class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart">
                                                    </i>
                                                    В корзину
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }  
                        </div>  
                         //для второго невидимого блока
                        <div class="item">                                         
                            @for (int k = 3; k < 6; k++)
                            {
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
