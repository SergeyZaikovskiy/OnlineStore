@model OnlineStore.ViewModels.CatalogViewModel

@using OnlineStore.Domain.Entities.ProductsEntities;


@{
    ViewData["Title"] = "Магазин";
    Layout = "_LayoutBase";
}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">               
                @{                    
                    @await Html.PartialAsync("Partial/_LeftSideBar", Model)
                }
            </div>
            <div class="col-sm-9 padding-right">
                @await Html.PartialAsync("Partial/_FeaturesItems", Model)
            </div>
        </div>
    </div>
</section>

