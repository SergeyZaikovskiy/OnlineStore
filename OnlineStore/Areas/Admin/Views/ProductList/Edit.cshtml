@model OnlineStore.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Редактирование";
    Layout = "_LayoutAdminArea";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form method="post" asp-area="Admin" asp-controller="ProductList" asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" type="hidden" />



            <div>
                @Html.LabelFor(model => model.Sections)
                @Html.DropDownListFor(model => model.Section.id, Model.Sections as SelectList,
                        htmlAttributes: new { @class = "form-control" })
            </div>

            <div>
                @Html.LabelFor(model => model.Categories)
                @Html.DropDownListFor(model => model.Category.id, Model.Categories as SelectList,
                        htmlAttributes: new { @class = "form-control" })
            </div>

            <div>
                @Html.LabelFor(model => model.Brands)
                @Html.DropDownListFor(model => model.Brand.id, Model.Brands as SelectList,
                        htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <input asp-for="Image.id" type="hidden" />

            <div class="form-group">
                <div class="container">
                    @if (Model.Id != null)
                    {
                        <img src="@Model.Image.Path" alt="">
                    }
                    <br>
                    <br>
                    <a class="btn" asp-area="Admin" asp-controller="ProductList" asp-action="ChangeImageForProduct" asp-route-idproduct="@Model.Id">Изменить изображение</a>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>

        <div>
            <a asp-area="Admin" asp-controller="ProductList" asp-action="Index">Вернуться к списку товаров</a>
        </div>

        <div>
            <br />
        </div>

    </div>
</div>


@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



