@model OnlineStore.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Редактирование";
    Layout = "_LayoutAdminArea";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form method="post" asp-area="Admin" asp-controller="ProductList" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*@Html.ValidationSummary(false, "Ощибка", new {@class="text-danger"})*@

            <input asp-for="Id" type="hidden" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                @*@Html.ValidationMessageFor(n=>Model.Name, "Ощибка!", new {class="text-danger" })*@

            </div>

            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <p>
                    <select asp-for="Brand.id" class="form-control">
                        <optgroup label="Бренд">
                            @foreach (var brand in Model.Brands)
                            {
                                if (Model.Brand != null)
                                {
                                    if (brand.id == Model.Brand.id)
                                    {
                                        <option selected value="@brand.id">@brand.Name</option> }
                                    else
                                    {
                                        <option value="@brand.id">@brand.Name</option>}
                                }
                                else
                                {
                                    <option value="@brand.id">@brand.Name</option>}
                            }
                        </optgroup>
                    </select>
                </p>
            </div>

            <div class="form-group">
                <label asp-for="Section" class="control-label"></label>
                <p>
                    <select asp-for="Section.id" class="form-control">
                        <optgroup label="Секция">
                            @foreach (var sec in Model.Sections)
                            {
                                if (Model.Section != null)
                                {
                                    if (sec.id == Model.Section.id)
                                    {
                                        <option selected value="@sec.id">@sec.Name</option> }
                                    else
                                    {
                                        <option value="@sec.id">@sec.Name</option>}
                                }
                                else
                                {
                                    <option value="@sec.id">@sec.Name</option>}
                            }

                        </optgroup>
                    </select>
                </p>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                    <label asp-for="Image.Path" class="control-label"></label>
                    <input asp-for="Image.Path" class="form-control" disabled />
                    <span asp-validation-for="Image.Path" class="text-danger"></span>
                </div>*@

            <input asp-for="Image.id" type="hidden" />

            <div class="form-group">
                <div class="container">
                    @if (Model.Id != null)
                    {
                        <img src="@Model.Image.Path" alt="">
                    }
                    <br>
                    <br>
                    <a class="btn" asp-area="Admin" asp-controller="ProductList" asp-action="ChangeImageForProduct" asp-route-idproduct="@Model.Id">Изменить изображение</a>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>

        <div>
            <a asp-area="Admin" asp-controller="ProductList" asp-action="Index">Вернуться к списку товаров</a>
        </div>
        <div>
            <br />
        </div>

    </div>
</div>




@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



