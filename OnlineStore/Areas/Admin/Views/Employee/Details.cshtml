@model OnlineStore.Areas.Admin.ViewModels.EmployeeItemViewModel
@{
    ViewData["Title"] = "Карточка сотрудника";
    Layout = "_LayoutAdminArea";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div>
            <b>Имя</b>
            <p class="fa-border alert-danger">
                @Model.Name
            </p>
        </div>
        <div>
            <b>Отчество</b>
            <p class="fa-border alert-danger">
                @Model.Patronimic
            </p>
        </div>
        <div>
            <b>Фамилия</b>
            <p class="fa-border alert-danger">
                @Model.SurName
            </p>
        </div>
        <div>
            <b>Возраст</b>
            <p class="fa-border alert-danger">
                @Model.Age
            </p>
        </div>
        <div>
            <b>Электронный адрес</b>
            <p class="fa-border alert-danger">
                @Model.Email
            </p>
        </div>
        <div>
            <b>Должность</b>
            <p class="fa-border alert-danger">
                @Model.Position.Name
            </p>
        </div>

        <div>
            <p><a asp-area="Admin" asp-controller="Employee" asp-action="Index">Вернуться к списку сотрудников</a></p>
        </div>
        <div>
            <br />
        </div>
    </div>
</div>

<hr />
